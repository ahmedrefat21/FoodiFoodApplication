<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Foodi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Foodi" parent="Base.Theme.Foodi" />

    <style name="textInputLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColorHint">#303030</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="passwordTextInputLayout" parent="textInputLayout">
        <item name="android:hint">@string/password</item>
        <item name="startIconDrawable">@drawable/ic_password</item>
        <item name="endIconDrawable">@drawable/ic_eye</item>
        <item name="endIconMode">password_toggle</item>
        <item name="iconPadding">@dimen/padding_tiny</item>
    </style>

    <style name="emailTextInputLayout" parent="textInputLayout">
        <item name="android:hint">@string/email</item>
        <item name="startIconDrawable">@drawable/ic_email</item>
        <item name="iconPadding">@dimen/padding_tiny</item>
    </style>

    <style name="skipTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:text">@string/skip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:drawableEnd">@drawable/ic_right_arrow</item>
    </style>

    <style name="HomeRecycleViewStyle">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="home_recycle_header_text_style" parent="">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">#DE121212</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="backgroundRecipeDetails" parent="">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="recipeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="textRecipeDetails" parent="">
        <item name="android:textColor">#99121212</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="headerStyle" parent="">
        <item name="android:textColor">#DE121212</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ColorFragmentBackground">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="titleTextInKitchenInfoStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#99121212</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="bodyTextInKitchenInfoStyle" parent="titleTextInKitchenInfoStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">#99121212</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="ImageStyle">
        <item name="cornerSizeBottomLeft">48dp</item>
        <item name="cornerSizeBottomRight">48dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


</resources>